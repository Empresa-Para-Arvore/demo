<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="demo.Views.NewItemPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Command="{Binding SaveItemCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Titulo" FontSize="Medium" />
            <Entry x:Name="txtDescription" Text="{Binding Item.Title}" FontSize="Small" />
            <Label Text="Descrição" FontSize="Medium" />
            <Entry Text="{Binding Item.Description}" FontSize="Small" />
            
            <Grid x:Name="grid" Margin="0" Padding="0" /> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>